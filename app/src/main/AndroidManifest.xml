<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skz.tmdbclient">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".presentation.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_no"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_no"
        android:supportsRtl="true"
        android:theme="@style/Theme.TMDBClient">
        <activity android:name=".presentation.artist.ArtistActivity"></activity>
        <activity android:name=".presentation.tvshow.TvShowActivity" />
        <activity android:name=".presentation.movie.MovieActivity" />
        <activity android:name=".presentation.HomeActivity"
            android:exported="true" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>